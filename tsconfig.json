{
  "compilerOptions": {
    "target": "es6",                          
    "module": "commonjs",                    
    "lib": ["dom","ESNext"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "scripts",
    "strict": true,         
    "noImplicitAny": true,
    "moduleResolution": "node",
    "typeRoots" : ["./node_modules/@types"],
  },
  "include": [
    "./scripts/*"]
}